            <label name="password"/>
            <field name="password" widget="password"/>

            <separator string="Datos personalizados para envio de correo" id='auth'/>
            <newline/>
            <label name="formato"/>
            <field name="formato"/>
            <label name="color"/>
            <field name="color"/>
            <label name="nombre_logo"/>
            <field name="nombre_logo"/>
            <newline/>
            <label name="msm_cuerpo"/>
            <field name="msm_cuerpo"/>
